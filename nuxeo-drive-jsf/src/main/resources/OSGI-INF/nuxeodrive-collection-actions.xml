<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.drive.actions.collections">

  <require>org.nuxeo.drive.actions</require>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="filters">

    <filter id="can_sync_current_doc" append="true">
      <rule grant="true">
        <type>Collection</type>
        <condition>#{nuxeoDriveCurrentSynchronizationRoot == null}</condition>
      </rule>
    </filter>

    <filter id="can_unsync_current_doc" append="true">
      <rule grant="true">
        <type>Collection</type>
        <condition>#{nuxeoDriveCurrentSynchronizationRoot != null}</condition>
      </rule>
    </filter>

  </extension>

</component>
